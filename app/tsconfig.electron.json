{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "verbatimModuleSyntax": true
  },
  "include": [
    "electron/**/*"
  ]
}